<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/serviceNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/serviceRateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorDateText"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/editImageView"
                android:layout_width="@dimen/size_icon_normal"
                android:layout_height="@dimen/size_icon_normal"
                android:layout_marginEnd="@dimen/size_8"
                android:padding="@dimen/size_8"
                android:tint="#4F748C"
                android:contentDescription="@string/image_description"
                app:srcCompat="@drawable/ic_edit_white">

        </ImageView>

        <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="@dimen/size_icon_normal"
                android:layout_height="@dimen/size_icon_normal"
                android:layout_marginEnd="@dimen/size_16"
                android:padding="@dimen/size_12"
                android:contentDescription="@string/image_description"
                app:srcCompat="@drawable/ic_delete_red">

        </ImageView>

    </LinearLayout>


    <include layout="@layout/layout_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"/>
</LinearLayout>