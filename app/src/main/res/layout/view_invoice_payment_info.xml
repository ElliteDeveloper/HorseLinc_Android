<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/paymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_16"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/payerNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|start"/>
        <TextView
                android:id="@+id/paidAtTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|start"/>
        <TextView
                android:id="@+id/amountToPayTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|end"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/payerSubmitPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_16"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_4"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/corner10_background_ececec">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/cardIconImageView"
                    android:layout_width="@dimen/size_avatar_small"
                    android:layout_height="@dimen/size_avatar_small"
                    android:layout_marginStart="@dimen/size_14"
                    app:riv_oval="true"
                    />

            <TextView
                    android:id="@+id/cardInfoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_14"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif" />

            <TextView
                    android:id="@+id/changeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_14"
                    android:layout_marginEnd="@dimen/size_16"
                    android:textSize="17sp"
                    android:textColor="@color/colorPink"
                    android:textStyle="normal"
                    android:text="@string/payment_change"
                    android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            <Button
                    android:id="@+id/payerSubmitPaymentButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_button_normal"
                    android:layout_weight="7"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryButtonTitle"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:text="@string/payment_submit_payment"
                    android:gravity="center"
                    android:background="@drawable/corner25_background_ec7185"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/fullApproverLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/fullApproverNoteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="@string/payment_full_approver_note"
                android:gravity="center" />

        <LinearLayout
                android:id="@+id/fullApproverCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:padding="@dimen/size_4"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/corner10_background_ececec">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fullApproverCardIconImageView"
                    android:layout_width="@dimen/size_avatar_small"
                    android:layout_height="@dimen/size_avatar_small"
                    android:layout_marginStart="@dimen/size_14"
                    app:riv_oval="true"
                    />

            <TextView
                    android:id="@+id/fullApproverCardInfoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_14"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif" />

            <TextView
                    android:id="@+id/fullApproverChangeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_14"
                    android:layout_marginEnd="@dimen/size_16"
                    android:textSize="17sp"
                    android:textColor="@color/colorPink"
                    android:textStyle="normal"
                    android:text="@string/payment_change"
                    android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            <Button
                    android:id="@+id/fullApproverSubmitPaymentButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_button_normal"
                    android:layout_weight="7"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryButtonTitle"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:text="@string/payment_submit_payment"
                    android:gravity="center"
                    android:background="@drawable/corner25_background_ec7185"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/partialApproverLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

        <TextView
                android:id="@+id/partialApproverInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPink"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="@string/payment_partial_approver_note"
                android:gravity="center" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            <Button
                    android:id="@+id/partialApproverRequestApprovalButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_button_normal"
                    android:layout_weight="7"
                    android:textSize="17sp"
                    android:textColor="@color/colorPink"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:text="@string/payment_request_approval"
                    android:gravity="center"
                    android:background="@drawable/corner25_border_2_ec7185"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/observerInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

        <TextView
                android:id="@+id/observerInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPink"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="@string/payment_observer_info"
                android:gravity="center" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            <Button
                    android:id="@+id/observerRequestApprovalButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_button_normal"
                    android:layout_weight="7"
                    android:textSize="17sp"
                    android:textColor="@color/colorPink"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:text="@string/payment_request_approval"
                    android:gravity="center"
                    android:background="@drawable/corner25_border_2_ec7185"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>