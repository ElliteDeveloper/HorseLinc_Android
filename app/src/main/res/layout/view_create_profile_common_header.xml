<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView android:layout_width="112dp"
                                                     android:layout_height="112dp"
                                                     android:id="@+id/profileImageView"
                                                     android:src="@drawable/ic_camera_alt"
                                                     android:background="#5997b1"
                                                     app:riv_border_width="2dp"
                                                     app:riv_border_color="#5997b1"
                                                     app:riv_oval="true"
                                                     android:scaleType="centerCrop"
                                                     app:riv_mutate_background="true"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintStart_toEndOf="@+id/nameEditText"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:background="@drawable/corner4_background_456579"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_text_cursor_white"
            android:hint="@string/name"
            android:textColorHint="#4dffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="8sp"
            android:id="@+id/nameEditText"
            tools:ignore="Autofill" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:inputType="phone"
            android:background="@drawable/corner4_background_456579"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_text_cursor_white"
            android:hint="@string/phone_number"
            android:textColorHint="#4dffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="8sp"
            android:id="@+id/phoneEditText"
            tools:ignore="Autofill" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            app:layout_constraintEnd_toEndOf="@+id/nameEditText"
            app:layout_constraintStart_toStartOf="@+id/nameEditText"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="56dp" android:id="@+id/locationEditText"
            android:inputType="textPostalAddress"
            android:background="@drawable/corner4_background_456579"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_text_cursor_white"
            android:hint="@string/search_your_location"
            android:textColorHint="#4dffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="8sp"
            android:drawableEnd="@drawable/ic_search_white"
            app:layout_constraintStart_toStartOf="@+id/phoneEditText"
            app:layout_constraintEnd_toEndOf="@+id/phoneEditText" tools:ignore="Autofill"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/phoneEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/corner4_background_456579"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_text_cursor_white"
            android:hint="@string/or_enter_your_address_here"
            android:textColorHint="#4dffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="8sp"
            android:id="@+id/addressEditText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/locationEditText"
            app:layout_constraintStart_toStartOf="@+id/locationEditText"
            app:layout_constraintEnd_toEndOf="@+id/locationEditText" tools:ignore="Autofill"/>

</androidx.constraintlayout.widget.ConstraintLayout>