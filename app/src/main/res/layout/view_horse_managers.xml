<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@mipmap/pic_logo" android:id="@+id/logoImageView"
                android:contentDescription="@string/image_description"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/ic_manager_white"
                android:id="@+id/managerImageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:contentDescription="@string/image_description" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/logoImageView"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:text="@string/horse_managers"
                android:id="@+id/titleTextView"
                app:layout_constraintStart_toEndOf="@+id/managerImageView"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/managerImageView"
                app:layout_constraintBottom_toBottomOf="@+id/managerImageView" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:lineSpacingExtra="9sp"
                android:text="@string/intro_horse_managers_description"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:id="@+id/descTextView"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/managerImageView"
                android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>